<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#dddddd"
        android:orientation="vertical"
        android:padding="5dp"
        android:textColor="#333333" >

        <!-- bar -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/drop_shadow"
            android:orientation="vertical" >

            <!-- imagem -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:adjustViewBounds="false"
                    android:background="#000000"
                    android:contentDescription="@string/image_bar_welcome_photo"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tavern" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp"
                    android:alpha="0.7"
                    android:background="#ffffff"
                    android:paddingBottom="3dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="3dp"
                    android:text="@string/bar_population"
                    android:textSize="14sp" />
            </RelativeLayout>

            <!-- informações com padding -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp" >

                <!-- logo, nome do estabelecimento, data de update e botao favorito -->

                <TableLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:collapseColumns="*"
                    android:shrinkColumns="*"
                    android:stretchColumns="1" >

                    <TableRow>

                        <ImageView
                            android:layout_width="46dp"
                            android:layout_height="46dp"
                            android:layout_marginRight="4dp"
                            android:contentDescription="@string/image_bar_logo"
                            android:src="@drawable/wolf" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="4dp"
                            android:orientation="vertical" >

                            <!-- nome do estabelecimento -->

                            <TextView
                                android:id="@+id/locinfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/bar_name"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <!-- endereco -->

                            <TextView
                                android:id="@+id/address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/bar_address"
                                android:textSize="12sp" />

                            <!-- data de update -->

                            <TextView
                                android:id="@+id/timestamp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/bar_last_modified"
                                android:textColor="#B3B3B3"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <!-- botao favorito -->

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:gravity="right"
                            android:orientation="horizontal" >

                            <ImageButton
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="#00FFFFFF"
                                android:contentDescription="@string/button_favorite"
                                android:src="@drawable/rating_not_important" />
                        </LinearLayout>
                    </TableRow>
                </TableLayout>

                <!-- descricao -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bar_description"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <!-- texto -->

                    <TextView
                        android:id="@+id/info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bar_description_text"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- botao laranja -->

                <Button
                    android:id="@+id/button1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/orange_button_selector"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="@string/button_checkin"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bar_comment"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>